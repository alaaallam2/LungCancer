<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutus">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="100dp"
            android:layout_width="333dp"
            android:layout_height="555dp"

            android:padding="15dp"
            android:text="We are a team at the Faculty of Computing and Artificial Intelligence, Benha University, Department of Medical Informatics. We have tried hard to reduce the incidence of lung cancer, given that the number of deaths from this disease is very large. We have tried hard to provide most of the services that a cancer patient needs throughout the treatment journey in order to alleviate it."
            android:textColor="@color/purple_200"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="144dp"
            android:layout_height="32dp"
            android:layout_marginTop="40dp"
            android:text="About US"
            android:textColor="@color/teal_700"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.209"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>